<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5.3 CSS -->
    @Styles.Render("~/bundles/css")

    <style>
        /* Updated for responsiveness: max-width instead of fixed width */
        .imgbook {
            transition: all 0.4s ease-in-out; /* Smoother timing */
            width: 100%;
            max-width: 400px;
            display: block;
            margin: 0 auto;
        }

            .imgbook:hover {
                transform: scale(0.95); /* Slightly subtler scale */
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }

        /* BS5 utility for spacing if needed */
        hr {
            margin: 2rem 0;
            opacity: 0.15;
        }
    </style>
</head>
<body>

    @Html.Action("NavPartial", "SachOnline")

    <!-- Hero/Slider Section -->
    <div class="container my-4">
        <div class="row">
            <div class="col-12">
                @Html.Action("SliderPartial", "SachOnline")
            </div>
        </div>
        <hr>
    </div>

    <!-- Main Content Body -->
    <div class="container">
        <div class="row g-4">
            <!-- Added gap (g-4) for better spacing -->
            <!-- Sidebar: col-12 on mobile, col-md-3 on desktop -->
            <aside class="col-12 col-md-3">
                <div class="mb-4">
                    @Html.Action("ChuDePartial", "SachOnline")
                </div>
                <div class="mb-4">
                    @Html.Action("NhaXuatBanPartial", "SachOnline")
                </div>
            </aside>

            <!-- Content Area: col-12 on mobile, col-md-9 on desktop -->
            <main class="col-12 col-md-9">
                @RenderBody() <!-- Removed semicolon after RenderBody() -->
            </main>

        </div>
        <hr>
    </div>

    <!-- Section for Best Sellers -->
    <div class="container mb-5">
        @RenderSection("SachBanNhieu", required: false)
    </div>

    @Html.Action("FooterPartial", "SachOnline")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Lucide Icons -->
    <script src="~/wwwroot/lib/lucide/dist/umd/lucide.min.js"></script>
    <script>
        // Ensure this runs after DOM is loaded
        document.addEventListener("DOMContentLoaded", function () {
            lucide.createIcons();
        });
    </script>
</body>
</html>