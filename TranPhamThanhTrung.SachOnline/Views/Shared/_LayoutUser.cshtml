<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <style>
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>
</head>
<body>

    @Html.Action("NavPartial", "SachOnline")


    <div class="container">
        <div class="row">


            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.Action("SliderPartial", "SachOnline")
            </div>
        </div>
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

                @Html.Action("ChuDePartial", "SachOnline")
                <br>

                @Html.Action("NhaXuatBanPartial", "SachOnline")

            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody();
            </div>
        </div>
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        @RenderSection("SachBanNhieu", required: false)
    </div>
    <!-- /.container-->
    @Html.Action("FooterPartial", "SachOnline")

    @Scripts.Render("~/Scripts/js")
</body>
</html>